-- Handling button clicks
button1.MouseButton1Click:Connect(function()
    -- Trigger Bot Lua Script
    local triggerBotFOV = math.huge
    local shootProbability = 76

    local function isPlayerInFOV(player)
        return true
    end

    local function shoot()
        print("Shooting!")
    end

    while true do
        for _, player in ipairs(game:GetService("Players"):GetPlayers()) do
            if player ~= game:GetService("Players").LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
                if isPlayerInFOV(player) and math.random(100) <= shootProbability then
                    shoot()
                end
            end
        end
        wait(0.1)
    end
end)

button2.MouseButton1Click:Connect(function()
    -- ESP Lua Script
    local espFOV = 90
    local espLineColor = Color3.new(1, 0, 0)

    local function isPlayerInESPFOV(player)
        local localPlayer = game:GetService("Players").LocalPlayer
        local camera = workspace.CurrentCamera
        local playerPosition = player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character.HumanoidRootPart.Position
        local localPlayerPosition = localPlayer.Character and localPlayer.Character:FindFirstChild("HumanoidRootPart") and localPlayer.Character.HumanoidRootPart.Position
        if playerPosition and localPlayerPosition then
            local direction = (playerPosition - localPlayerPosition).unit
            local angle = math.acos(direction.X * camera.CFrame.lookVector.X + direction.Y * camera.CFrame.lookVector.Y + direction.Z * camera.CFrame.lookVector.Z) * (180 / math.pi)
            return angle <= espFOV
        end
        return false
    end

    local function createESPLine(player)
        local localPlayer = game:GetService("Players").LocalPlayer
        local camera = workspace.CurrentCamera
        local playerPosition = player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character.HumanoidRootPart.Position
        local localPlayerPosition = localPlayer.Character and localPlayer.Character:FindFirstChild("HumanoidRootPart") and localPlayer.Character.HumanoidRootPart.Position
        if playerPosition and localPlayerPosition then
            local line = Drawing.new("Line")
            line.Visible = true
            line.Color = espLineColor
            line.From = camera:WorldToViewportPoint(localPlayerPosition)
            line.To = camera:WorldToViewportPoint(playerPosition)
            return line
        end
        return nil
    end

    while true do
        for _, player in ipairs(game:GetService("Players"):GetPlayers()) do
            if player ~= game:GetService("Players").LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
                if isPlayerInESPFOV(player) then
                    createESPLine(player)
                end
            end
        end
        wait(0.1)
    end
end)

button3.MouseButton1Click:Connect(function()
    game.Players.LocalPlayer:Kick("Redirecting to Discord Server: https://discord.gg/silentcaliber")
end)
